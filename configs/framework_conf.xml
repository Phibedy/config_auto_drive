<framework>
	<execution>
		<maxThreadCount> 1 </maxThreadCount>
		<clock enabled="true" unit="hz">100</clock>
	</execution>
	<modulesToEnable>
		<module>camera_importer</module>
		<module logLevel="WARN">ogre_window_manager</module>
		<module>image_detection_test</module>
		<module logLevel="WARN">camera_renderer</module>
		<module>image_hint_worker</module>
		<module>image_converter</module>
		<module>camera_renderer_debug</module>
	</modulesToEnable>
	<module>
		<name>ogre_window_manager</name>
	</module>
	<module>
		<name>camera_renderer</name>
		<channelMapping from="IMAGE" to="GREY_IMAGE"/>
	</module>
		<module>
		<name>camera_renderer_debug</name>
		<libname>camera_renderer</libname>
		<libpath>camera_renderer</libpath>
		<channelMapping from="IMAGE" to="DEBUG_IMAGE"/>
		<!--config>
		    <window>DEBUG_IMAGE_WINDOW</window>
		</config!-->
	</module>
	<module>
		<name>image_detection_test</name>
	</module>
	<module>
		<name>image_converter</name>
	<config>
		<input_channel>IMAGE</input_channel>
		<output_channel>GREY_IMAGE</output_channel>
		<output_format>GREY</output_format>
	</config>
	</module>
	<module>
	    <name>image_hint_worker</name>
	</module>
	<module>
		<name>camera_importer</name>
		<config src="camera_importer.lconf"/>
	</module>
</framework>
