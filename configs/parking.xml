<framework>       

    <modulesToEnable>
        <module logLevel="ERROR">parking</module>
    </modulesToEnable>

    <module>
            <name>parking</name>
            <channelMapping priority="20" from="CAR" to="CAR"/>
            <config>               

                <!-- line fit auf den Punkten der Mittellinie -->
                <lineFitStartPoint>4</lineFitStartPoint>
                <lineFitEndPoint>9</lineFitEndPoint>

                <!-- Abmessungen einer validen Parklücke -->
                <minParkingSpaceSize>0.5</minParkingSpaceSize>
                <maxParkingSpaceSize>0.6</maxParkingSpaceSize>

                <!-- Geschwindigkeiten -->
                <velocitySearching>3.0</velocitySearching>
                <velocityEntering>0.6</velocityEntering>
                <velocityCorrecting>0.7</velocityCorrecting>
                <decelerationStopping>0.0</decelerationStopping>
                <velocityApproaching>2.5</velocityApproaching>

                <!-- ENTERING -->
                <xDistanceCorrection>0.0</xDistanceCorrection> <!-- Korrektur für hohe Geschwindigkeiten beim Rückwärtsfahren -->
                <alphaOffset>0.15</alphaOffset>
                <y0_worstCase>0.24</y0_worstCase>
                <k>0.02</k> <!-- safety distance zur Ecke der zweiten Box-->
                <d>0.125</d> <!-- safety distance zur ersten Box -->
                <maxSteeringAngle>24</maxSteeringAngle> <!-- in Grad-->

                <!-- CORRECTING -->
                <correctingDistance>0.06</correctingDistance> <!-- letzter Zug in der Parklücke "Krabbengang"-->
                <useSecondCorrecting>false</useSecondCorrecting>
                <correctingSecondDistance>0.04</correctingSecondDistance>

                <!-- SEARCHING -->
                <medianFilterSize>3</medianFilterSize>
                <searchingPhiFactor>-0.0</searchingPhiFactor> <!-- Korrekturwinkel falls das Auto schräg anfährt-->
                <lidarMeasurementsPerSecond>300</lidarMeasurementsPerSecond>
                <gradientThreshold>0.15</gradientThreshold> <!-- Für größere Werte wird eine Kante erkannt -->
                <maxDistanceLidar>0.85</maxDistanceLidar> <!-- Lidar cut-off distance -->
                <!--minDistanceLidar>0.09</minDistanceLidar--> <!-- wurde wegen median filter entfernt -->

                <!-- weitere Parameter -->
                <distanceMidLidarX>0.09</distanceMidLidarX> <!-- Abstand Lidar zu Mitte Fahrzeug in x-Richtung -->
                <distanceMidLidarY>0.08</distanceMidLidarY> <!-- Abstand Lidar zu Mitte Fahrzeug in y-Richtung -->
                <minVelocityBeforeDrivingBackwards>0.3</minVelocityBeforeDrivingBackwards>
                <wheelbase>0.21</wheelbase>
                <carLength>0.32</carLength>
                <carWidth>0.2</carWidth>

                <!-- DEBUG -->
                <debugPrintEdges>true</debugPrintEdges>
            </config>
    </module>

    <include src="new_car.xml" />

</framework>
