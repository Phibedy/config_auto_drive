<framework>
	<execution>
        <!--clock enabled="true" unit="hz" value="10" /-->
	</execution>
    <modulesToEnable>
        <if notSet="sense_link">
            <module logLevel="DEBUG">importer_senseboard2015</module>
            <module logLevel="DEBUG">car_to_senseboard2015</module>
            <module logLevel="DEBUG">sensor_tracker</module>
        </if>
        <if set="sense_link">
            <module logLevel="INFO">usb_sense_link</module>
            <module logLevel="INFO">usb_sense_link_fs</module>
            <module logLevel="DEBUG">car_to_sense_link</module>
            <if set="sensor_logger">
                <module logLevel="INFO">senselink_csvlogger</module>
            </if>
        </if>
	</modulesToEnable>	
	<module>
		<name>importer_senseboard2015</name>
	    <config>
		    <usbDevice>/dev/ttyACM0</usbDevice>
	    </config>
	    <config name="ir_front" src="sensor/ir_front.lconf" />
	    <config name="ir_rear" src="sensor/ir_rear.lconf" />
	    <config name="ir_r_front" src="sensor/ir_r_front.lconf" />
	    <config name="ir_r_rear" src="sensor/ir_r_rear.lconf" />
	    <config name="ultrasonic" src="sensor/ultrasonic.lconf" />
	    <config name="gyro" src="sensor/gyro.lconf" />
	    <config name="acc" src="sensor/acc.lconf" />
	    <config name="encoder" src="sensor/encoder.lconf" />
	    <config name="mode" src="sensor/mode.lconf" />
	    <config name="rc_poti" src="sensor/rc_poti.lconf" />
	    <config name="servo_front" src="sensor/servo_front.lconf" />
	    <config name="servo_rear" src="sensor/servo_rear.lconf" />
	    <config name="velocity" src="sensor/velocity.lconf" />
	</module>
    <module>
        <name>usb_sense_link</name>
        <config>
            <path>/dev/senseboard2016</path>
            <init_sleep>0</init_sleep>
            <sensorChannels>SENSOR_DATA</sensorChannels>
            <!--<actuatorChannels>ACTUATOR_DATA</actuatorChannels>-->
            <SENSOR_DATA>*</SENSOR_DATA>
        </config>
    </module>
    <module>
        <name>usb_sense_link_fs</name>
        <realName>usb_sense_link</realName>
        <config>
            <path>/dev/senseboard2016-fs</path>
            <init_sleep>0</init_sleep>
            <!--<sensorChannels>SENSOR_DATA</sensorChannels>
            <SENSOR_DATA>*</SENSOR_DATA>-->
            <actuatorChannels>ACTUATOR_DATA</actuatorChannels>
        </config>
    </module>
	<module>
            <name>car_to_senseboard2015</name>
            <channelMapping priority="10" from="CAR" to="CAR"/>
	</module>
    <module>
        <name>car_to_sense_link</name>
        <channelMapping priority="10" from="CAR" to="CAR"/>
    </module>
    <module>
        <name>senselink_csvlogger</name>
        <config user="odroid">
            <prefix>/home/odroid/data/sensor/sensor</prefix>
        </config>
    </module>
	<include src="cam.xml"/>
</framework>
